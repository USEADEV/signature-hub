# App Configuration
PORT=3000
BASE_URL=http://localhost:3000
NODE_ENV=development

# Demo Mode (set to true to skip email/SMS, use code "123456")
DEMO_MODE=true

# Test Mode (sends real emails/SMS but redirects ALL recipients to test accounts)
# Ignored when DEMO_MODE=true. Verification codes are randomly generated.
TEST_MODE=false
TEST_EMAIL=test@example.com
TEST_PHONE=+1234567890

# Database Type: 'sqlite' or 'mysql'
DB_TYPE=sqlite

# MySQL (only needed if DB_TYPE=mysql)
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_user
DB_PASSWORD=your_password
DB_NAME=showconnect

# API Key for internal endpoints
API_KEY=demo-api-key

# Twilio SMS (optional in demo mode)
TWILIO_ACCOUNT_SID=your_sid
TWILIO_AUTH_TOKEN=your_token
TWILIO_PHONE_NUMBER=+1234567890

# Email SMTP (optional in demo mode)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email
SMTP_PASSWORD=your_password
EMAIL_FROM=signatures@yourcompany.com
