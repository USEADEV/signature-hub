  "templates": {
    "_description": "Examples for creating templates",

    "basicTemplate": {
      "endpoint": "POST /api/templates",
      "request": {
        "templateCode": "SIMPLE_WAIVER_2024",
        "name": "Simple Liability Waiver",
        "description": "Basic liability waiver for general use",
        "htmlContent": "<h2>Liability Waiver</h2><p>I, <strong>{{signerName}}</strong>, hereby acknowledge and agree to the following terms and conditions.</p><p>Date: {{currentDate}}</p>"
      }
    },

    "templateWithJurisdiction": {
      "endpoint": "POST /api/templates",
      "request": {
        "templateCode": "TEAM_WAIVER_2024",
        "name": "Team Registration Waiver",
        "description": "Comprehensive waiver for team sports registration",
        "jurisdiction": "US-VA",
        "htmlContent": "<div class=\"waiver-document\"><h1>{{organizationName}}</h1><h2>{{documentName}}</h2><div class=\"event-info\"><p><strong>Event:</strong> {{eventName}}</p><p><strong>Event Date:</strong> {{eventDate}}</p></div><div class=\"participant-info\"><h3>Participant Information</h3><p><strong>Name:</strong> {{signerName}}</p><p><strong>Role(s):</strong> {{signerRoles}}</p></div><div class=\"terms\"><h3>Terms and Conditions</h3><p>By signing below, I acknowledge that I have read, understand, and agree to be bound by this waiver agreement.</p><ol><li>I understand that participation involves inherent risks.</li><li>I agree to follow all safety guidelines and instructions.</li><li>I release {{organizationName}} from any liability.</li></ol></div><div class=\"jurisdiction-addendum\">{{jurisdictionAddendum}}</div><div class=\"signature-section\"><p>Signature Date: {{currentDate}}</p></div></div>"
      }
    }
  },

  "jurisdictions": {
    "_description": "Examples for creating jurisdiction addendums",

    "virginiaAddendum": {
      "endpoint": "POST /api/jurisdictions",
      "request": {
        "jurisdictionCode": "US-VA",
        "jurisdictionName": "Virginia",
        "addendumHtml": "<div class=\"jurisdiction-notice\"><h4>Virginia-Specific Terms</h4><p>This agreement is governed by the laws of the Commonwealth of Virginia. In accordance with Virginia Code Section 8.01-227.8, this waiver is enforceable to release liability for ordinary negligence.</p></div>"
      }
    },

    "californiaAddendum": {
      "endpoint": "POST /api/jurisdictions",
      "request": {
        "jurisdictionCode": "US-CA",
        "jurisdictionName": "California",
        "addendumHtml": "<div class=\"jurisdiction-notice\"><h4>California-Specific Terms</h4><p>This agreement is governed by the laws of the State of California. In accordance with California Civil Code Section 1542, I expressly waive any rights or benefits under that section which provides: \"A general release does not extend to claims that the creditor or releasing party does not know or suspect to exist in his or her favor at the time of executing the release and that, if known by him or her, would have materially affected his or her settlement with the debtor or released party.\"</p></div>"
      }
    }
  },

  "replaceSigner": {
    "_description": "Replace a signer who refuses to sign or needs to be changed",

    "replaceGuardian": {
      "_description": "Replace a guardian who can't sign with another family member",
      "endpoint": "PUT /api/packages/{packageId}/roles/{roleId}",
      "request": {
        "name": "Aunt Mary Smith",
        "email": "aunt.mary@example.com",
        "phone": "+15559876543",
        "verificationMethod": "email"
      },
      "_workflow": [
        "1. Original package created with Parent A as guardian",
        "2. Parent A is unavailable or refuses to sign",
        "3. Use 'Get Package Status' to find the roleId for the guardian role",
        "4. Call this endpoint to replace Parent A with Aunt Mary",
        "5. Parent A's signing link is invalidated",
        "6. Aunt Mary receives new signing link",
        "7. Aunt Mary signs as guardian"
      ]
    },

    "replaceCoach": {
      "_description": "Replace a coach who left the organization",
      "endpoint": "PUT /api/packages/{packageId}/roles/{roleId}",
      "request": {
        "name": "New Coach Williams",
        "phone": "+15551112222",
        "verificationMethod": "sms"
      }
    }
  },

  "singleSignerRequests": {
    "_description": "Examples for single-signer signature requests",

    "basicRequest": {
      "endpoint": "POST /api/requests",
      "request": {
        "documentName": "Service Agreement",
        "signerName": "John Doe",
        "signerEmail": "john.doe@example.com",
        "verificationMethod": "email",
        "documentContent": "<h2>Service Agreement</h2><p>This agreement is between {{signerName}} and Example Corp.</p>"
      }
    },

    "requestWithTemplate": {
      "endpoint": "POST /api/requests",
      "request": {
        "documentName": "Individual Waiver",
        "signerName": "Jane Smith",
        "signerEmail": "jane.smith@example.com",
        "signerPhone": "+15551234567",
        "verificationMethod": "email",
        "waiverTemplateCode": "SIMPLE_WAIVER_2024",
        "mergeVariables": {
          "organizationName": "Fitness Center"
        },
        "jurisdiction": "US-VA",
        "externalRef": "member-2024-0123",
        "callbackUrl": "https://your-server.com/webhooks"
      }
    }
  },

