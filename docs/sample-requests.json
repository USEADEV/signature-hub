{
  "_description": "Sample API requests for SignatureHub Multi-Party Signing Packages",
  "_note": "Replace placeholder values with your actual data",

  "multiPartyPackages": {
    "_description": "Examples for creating multi-party signing packages",

    "basicPackage": {
      "_description": "Minimal package with two signers",
      "endpoint": "POST /api/packages",
      "request": {
        "documentName": "Basic Waiver",
        "documentContent": "<h2>Waiver Agreement</h2><p>I, {{signerName}}, agree to the terms.</p>",
        "signers": [
          {
            "role": "participant",
            "name": "John Athlete",
            "email": "john@example.com"
          },
          {
            "role": "guardian",
            "name": "Jane Parent",
            "email": "jane@example.com"
          }
        ],
        "verificationMethod": "email"
      }
    },

    "packageWithTemplate": {
      "_description": "Package using a pre-defined template with merge variables",
      "endpoint": "POST /api/packages",
      "request": {
        "templateCode": "TEAM_WAIVER_2024",
        "jurisdiction": "US-VA",
        "eventDate": "2024-06-15",
        "mergeVariables": {
          "organizationName": "Sports Academy",
          "eventName": "Summer Training Camp",
          "teamName": "Junior Eagles",
          "coachName": "Mike Wilson"
        },
        "signers": [
          {
            "role": "participant",
            "name": "Tommy Smith",
            "email": "parent@example.com",
            "dateOfBirth": "2012-05-15",
            "isMinor": true
          },
          {
            "role": "guardian",
            "name": "John Smith",
            "email": "parent@example.com",
            "dateOfBirth": "1980-03-20"
          },
          {
            "role": "coach",
            "name": "Mike Wilson",
            "email": "coach@example.com",
            "dateOfBirth": "1985-01-10"
          }
        ],
        "verificationMethod": "email",
        "externalRef": "registration-2024-001",
        "callbackUrl": "https://your-server.com/webhooks/signatures"
      }
    },

    "consolidatedSigners": {
      "_description": "Example showing role consolidation - same email gets one signing link",
      "endpoint": "POST /api/packages",
      "request": {
        "documentName": "Family Waiver",
        "documentContent": "<h2>{{documentName}}</h2><p>Participant: {{signerName}}</p><p>Roles: {{signerRoles}}</p>",
        "signers": [
          {
            "role": "participant",
            "name": "Child One",
            "email": "family@example.com",
            "dateOfBirth": "2015-01-01",
            "isMinor": true
          },
          {
            "role": "participant",
            "name": "Child Two",
            "email": "family@example.com",
            "dateOfBirth": "2017-06-15",
            "isMinor": true
          },
          {
            "role": "guardian",
            "name": "Parent Smith",
            "email": "family@example.com",
            "dateOfBirth": "1985-03-20"
          }
        ],
        "verificationMethod": "email"
      },
      "_expectedResult": "One signature request created for family@example.com with roles: participant (x2), guardian"
    },

    "perSignerVerification": {
      "_description": "Package where each signer has different verification methods",
      "endpoint": "POST /api/packages",
      "request": {
        "documentName": "Mixed Verification Waiver",
        "documentContent": "<h2>{{documentName}}</h2><p>Participant: {{signerName}}</p>",
        "signers": [
          {
            "role": "participant",
            "name": "Alex Student",
            "email": "alex@example.com",
            "verificationMethod": "email",
            "_comment": "Student prefers email verification"
          },
          {
            "role": "guardian",
            "name": "Parent Smith",
            "phone": "+15551234567",
            "verificationMethod": "sms",
            "_comment": "Parent only has phone number"
          },
          {
            "role": "coach",
            "name": "Coach Johnson",
            "email": "coach@example.com",
            "phone": "+15559876543",
            "verificationMethod": "both",
            "_comment": "Coach prefers both for extra security"
          }
        ]
      },
      "_note": "Each signer can have their own verificationMethod, overriding the package default"
    },

