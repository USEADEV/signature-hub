  "curlExamples": {
    "_description": "Copy-paste curl commands for testing",

    "createPackage": "curl -X POST https://your-domain.com/api/packages -H 'Content-Type: application/json' -H 'X-API-Key: your-api-key' -d '{\"documentName\":\"Test Waiver\",\"documentContent\":\"<p>Test content for {{signerName}}</p>\",\"signers\":[{\"role\":\"participant\",\"name\":\"Test User\",\"email\":\"test@example.com\"}],\"verificationMethod\":\"email\"}'",

    "getPackageStatus": "curl -X GET https://your-domain.com/api/packages/PKG-ABC123 -H 'X-API-Key: your-api-key'",

    "listPackages": "curl -X GET 'https://your-domain.com/api/packages?status=pending&limit=10' -H 'X-API-Key: your-api-key'",

    "createTemplate": "curl -X POST https://your-domain.com/api/templates -H 'Content-Type: application/json' -H 'X-API-Key: your-api-key' -d '{\"templateCode\":\"TEST_TEMPLATE\",\"name\":\"Test Template\",\"htmlContent\":\"<p>Hello {{signerName}}</p>\"}'",

    "listJurisdictions": "curl -X GET https://your-domain.com/api/jurisdictions -H 'X-API-Key: your-api-key'",

    "getRoleRequirements": "curl -X GET https://your-domain.com/api/roles/requirements -H 'X-API-Key: your-api-key'"
  }
}
